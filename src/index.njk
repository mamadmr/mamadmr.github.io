    </div>

    <!-- Tab Navigation -->
    <div class="flex flex-wrap justify-center mb-8 border-b border-gray-200 dark:border-gray-700">
        {% for tab in collections.tabs %}
        <button 
            class="tab-button px-6 py-3 text-sm font-medium {% if tab.slug == 'education' %}border-primary-600 text-primary-600 dark:border-primary-400 dark:text-primary-400{% else %}text-gray-500 dark:text-gray-400 border-transparent{% endif %} hover:text-gray-700 dark:hover:text-gray-200 border-b-2 hover:border-gray-300 dark:hover:border-gray-600 transition-colors"
            data-tab="{{ tab.slug }}"
            {% if tab.slug == 'education' %}data-active="true"{% endif %}
        >
            {{ tab.name }}
        </button>
        {% endfor %}
    </div>

    <!-- Tab Content -->
    {% for tab in collections.tabs %}
    <div 
        class="tab-content {% if tab.slug != 'education' %}hidden{% endif %}"
        id="tab-{{ tab.slug }}"
    >
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">{{ tab.name }}</h2>
        </div>

        {% if tab.items.length > 0 %}
        <div class="space-y-6">
            {% for item in tab.items %}
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
                {% set showDetails = true %}
                {% if item.showDetails is defined and item.showDetails == false %}
                    {% set showDetails = false %}
                {% elif item.content and item.content.trim().length < 100 %}
                    {% set showDetails = false %}
                {% endif %}
                
                {% if showDetails %}
                <a href="/{{ tab.slug }}/{{ item.slug }}/" class="block">
                {% endif %}
                    <div class="md:flex">
                        {% if item.image and item.image != "" and item.image != "placeholder.jpg" and item.image != "README.md" %}
                        <div class="md:flex-shrink-0">
                            <div class="h-48 w-full md:w-48 bg-gray-200 dark:bg-gray-700 rounded-t-lg md:rounded-l-lg md:rounded-t-none overflow-hidden">
                                <img 
                                    src="/content/{{ tab.name }}/{{ item.name }}/images/{{ item.image }}" 
                                    alt="{{ item.title }}"
                                    class="w-full h-full object-cover"
                                    loading="lazy"
                                    onerror="this.parentElement.style.display='none'"
                                >
                            </div>
                        </div>
                        {% endif %}
                        
                        <div class="p-6 flex-1">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                                        {{ item.title }}
                                    </h3>
                                    {% if item.description %}
                                    <p class="text-gray-700 dark:text-gray-300 mb-4">
                                        {{ item.description }}
                                    </p>
                                    {% endif %}
                                </div>
                                
                                <div class="ml-4 text-right">
                                    {% if item.start or item.end %}
                                    <div class="text-sm text-gray-500 dark:text-gray-400">
                                        <div>{{ item.start }}</div>
                                        {% if item.end %}
                                        <div>{{ item.end }}</div>
                                        {% endif %}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <div class="flex items-center justify-between">
                                {% if showDetails %}
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    Click to view details
                                </div>
                                <div class="flex items-center text-blue-600 dark:text-blue-400">
                                    <span class="text-sm font-medium">View Details</span>
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% if showDetails %}
                </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-12">
            <div class="text-gray-500 dark:text-gray-400">
                <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="text-lg">No items found in {{ tab.name }}</p>
                <p class="text-sm mt-2">Add content by creating folders in /content/{{ tab.name }}/</p>
            </div>
        </div>
        {% endif %}
    </div>
    {% endfor %}
</div>
